<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/contenedor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_marca"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/lbl_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_marca"
        android:text="Marca"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/lbl_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_marca"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_marca"
        android:text="Modelo"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lbl_anio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_marca"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:text="AÃ±o"
        android:textSize="16sp" />

</RelativeLayout>